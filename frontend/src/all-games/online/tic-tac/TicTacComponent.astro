<style is:inline>
  /* Variables CSS para el dise√±o premium */
  :root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --warning-gradient: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    --dark-gradient: linear-gradient(135deg, #434343 0%, #000000 100%);
    --board-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    --tile-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    --text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    --border-radius: 15px;
    --animation-duration: 0.3s;
  }

  body {
    background: var(--primary-gradient);
    min-height: 100vh;
    margin: 0;
    font-family: 'Arial', sans-serif;
  }

  .game-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h1 {
    background: linear-gradient(45deg, #fff, #f0f0f0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
    text-shadow: var(--text-shadow);
    letter-spacing: 2px;
  }

  .game-info {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    padding: 20px;
    margin: 20px 0;
    width: 100%;
    max-width: 500px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    flex-wrap: wrap;
    gap: 10px;
  }

  #connectionStatus {
    padding: 8px 16px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-weight: bold;
    font-size: 0.9rem;
  }

  #playersInfo {
    padding: 8px 16px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-weight: bold;
    font-size: 0.9rem;
  }

  #userInfo {
    padding: 8px 16px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 0.8rem;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  #message {
    font-size: 1.8rem;
    font-weight: bold;
    color: white;
    text-align: center;
    text-shadow: var(--text-shadow);
    margin: 15px 0;
    padding: 15px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .current-red {
    background: var(--secondary-gradient) !important;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .current-yellow {
    background: var(--warning-gradient) !important;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  #board {
    width: 90vw;
    max-width: 450px;
    aspect-ratio: 1 / 1;
    margin: 20px auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 8px;
    background: rgba(0, 0, 0, 0.3);
    padding: 15px;
    border-radius: var(--border-radius);
    box-shadow: var(--board-shadow);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .tile {
    background: linear-gradient(145deg, #ffffff, #e6e6e6);
    border-radius: 12px;
    box-shadow: var(--tile-shadow);
    font-size: 4rem;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: all var(--animation-duration) ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
    position: relative;
    overflow: hidden;
  }

  .tile::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s;
  }

  .tile:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.2);
    background: linear-gradient(145deg, #f0f0f0, #d0d0d0);
  }

  .tile:hover::before {
    left: 100%;
  }

  .tile:active {
    transform: translateY(-1px);
  }

  .tile.X {
    color: #e74c3c;
    text-shadow: 2px 2px 4px rgba(231, 76, 60, 0.3);
  }

  .tile.O {
    color: #3498db;
    text-shadow: 2px 2px 4px rgba(52, 152, 219, 0.3);
  }

  .winner {
    background: var(--success-gradient) !important;
    color: white !important;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5) !important;
    animation: winnerPulse 1s infinite;
    transform: scale(1.05);
  }

  @keyframes winnerPulse {
    0%, 100% {
      box-shadow: 0 0 20px rgba(76, 175, 80, 0.7);
    }
    50% {
      box-shadow: 0 0 30px rgba(76, 175, 80, 1);
    }
  }

  .tie {
    background: var(--warning-gradient) !important;
    color: white !important;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5) !important;
    animation: tieGlow 1s infinite;
  }

  @keyframes tieGlow {
    0%, 100% {
      box-shadow: 0 0 15px rgba(255, 193, 7, 0.7);
    }
    50% {
      box-shadow: 0 0 25px rgba(255, 193, 7, 1);
    }
  }

  .button-container {
    display: flex;
    gap: 15px;
    margin: 30px 0;
    flex-wrap: wrap;
    justify-content: center;
  }

  #restartBtn, .game-btn {
    font-size: 1.1rem;
    padding: 12px 24px;
    background: var(--success-gradient);
    color: white;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    font-weight: bold;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    transition: all var(--animation-duration) ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: none;
  }

  #restartBtn:hover, .game-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
    background: linear-gradient(135deg, #45a049, #4caf50);
  }

  #restartBtn:active, .game-btn:active {
    transform: translateY(0);
  }

  /* Modal de fin de juego */
  .game-end-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .modal-content {
    background: var(--primary-gradient);
    padding: 40px;
    border-radius: var(--border-radius);
    text-align: center;
    max-width: 400px;
    width: 90%;
    box-shadow: var(--board-shadow);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .modal-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: white;
    text-shadow: var(--text-shadow);
  }

  .modal-title.winner {
    background: var(--success-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .modal-title.loser {
    background: var(--secondary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .modal-message {
    font-size: 1.2rem;
    color: white;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .modal-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .modal-btn {
    padding: 12px 24px;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: all var(--animation-duration) ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .modal-btn.primary {
    background: var(--success-gradient);
    color: white;
  }

  .modal-btn.secondary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .modal-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 600px) {
    h1 {
      font-size: 2.5rem;
    }

    .tile {
      font-size: 3rem;
    }

    #message {
      font-size: 1.4rem;
    }

    .status-bar {
      flex-direction: column;
      align-items: stretch;
    }

    .game-info {
      padding: 15px;
    }

    .modal-content {
      padding: 30px 20px;
    }

    .modal-title {
      font-size: 2rem;
    }

    .modal-buttons {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .game-container {
      padding: 10px;
    }

    #board {
      width: 95vw;
      max-width: 350px;
    }

    .tile {
      font-size: 2.5rem;
    }
  }
</style>

