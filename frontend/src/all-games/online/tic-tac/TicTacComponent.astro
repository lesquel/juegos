<style is:inline>
  h1 {
    color: #333;
    margin-bottom: 10px;
    text-align: center;
  }

  #message {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 20px 0;
    color: #333;
    text-align: center;
  }

  #board {
    width: 90vw;
    max-width: 450px;
    aspect-ratio: 1 / 1;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    background-color: #333;
    border: 2px solid #333;
  }

  .tile {
    width: 33.33%;
    height: 33.33%;
    border: 2px solid #333;
    box-sizing: border-box;
    font-size: 4rem;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    background-color: white;
    transition: background-color 0.3s;
  }

  .tile:hover {
    background-color: #f5f5f5;
  }

  .horizontal-line {
    border-bottom: 5px solid #333;
  }

  .vertical-line {
    border-right: 5px solid #333;
  }

  .winner {
    background-color: #90ee90 !important;
    animation: pulse 1s infinite;
  }

  @keyframes pulse {
    0% {
      background-color: #90ee90;
    }
    50% {
      background-color: #50c878;
    }
    100% {
      background-color: #90ee90;
    }
  }

  .tie {
    background-color: #ffe4b5 !important;
  }

  #restartBtn {
    font-size: 1rem;
    padding: 10px 20px;
    margin: 20px auto;
    background-color: #4caf50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    display: none;
    display: block;
  }

  #restartBtn:hover {
    background-color: #45a049;
  }

  @media (max-width: 600px) {
    .tile {
      font-size: 3rem;
    }

    #message {
      font-size: 1.2rem;
    }

    #restartBtn {
      width: 80%;
    }
  }
</style>

<h1>Tic Tac Toe</h1>
<div id="message">Jugador O comienza</div>
<div id="board"></div>
<button id="restartBtn">Jugar de Nuevo</button>
<script src="./tictactoe.js"></script>
