<style is:inline>
    #body {
        background: linear-gradient(45deg, #0f0f23, #1a1a2e, #16213e);
        color: white;
        font-family: 'Courier New', monospace;
        overflow: hidden;
        height: 100vh;
        display: flex;
        flex-direction: column;
        user-select: none;
        -webkit-user-select: none;
        -webkit-touch-callout: none;
    }

    #gameContainer {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    #board {
        background: linear-gradient(45deg, #000, #111);
        border: 3px solid #00ffff;
        box-shadow:
            0 0 20px #00ffff,
            inset 0 0 20px rgba(0, 255, 255, 0.1);
        border-radius: 10px;
        max-width: 95vw;
        max-height: 60vh;
    }

    #gameInfo {
        position: absolute;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 20px;
        z-index: 10;
        pointer-events: none;
    }

    .score {
        font-size: clamp(24px, 5vw, 40px);
        font-weight: bold;
        text-shadow: 0 0 10px #00ffff;
        color: #00ffff;
    }

    #controls {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding: 20px;
        height: 150px;
        background: rgba(0, 0, 0, 0.3);
    }

    .control-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .player-label {
        font-size: 14px;
        color: #00ffff;
        text-shadow: 0 0 5px #00ffff;
    }

    .control-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .control-btn {
        width: 60px;
        height: 60px;
        border: 2px solid #00ffff;
        background: linear-gradient(145deg, rgba(0, 255, 255, 0.1), rgba(0, 255, 255, 0.05));
        border-radius: 15px;
        color: #00ffff;
        font-size: 24px;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(0, 255, 255, 0.3);
        transition: all 0.1s ease;
        cursor: pointer;
        user-select: none;
        -webkit-user-select: none;
        -webkit-touch-callout: none;
    }

    .control-btn:active {
        background: linear-gradient(145deg, rgba(0, 255, 255, 0.3), rgba(0, 255, 255, 0.2));
        transform: scale(0.95);
        box-shadow: 0 2px 8px rgba(0, 255, 255, 0.5);
    }

    .control-btn:hover {
        box-shadow: 0 6px 20px rgba(0, 255, 255, 0.4);
    }

    #gameOverScreen {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: none;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        z-index: 1000;
    }

    #gameOverScreen.show {
        display: flex;
    }

    .game-over-content {
        text-align: center;
        padding: 30px;
        border: 2px solid #00ffff;
        border-radius: 20px;
        background: linear-gradient(145deg, rgba(0, 255, 255, 0.1), rgba(0, 0, 0, 0.8));
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
    }

    .game-over-title {
        font-size: clamp(28px, 8vw, 48px);
        margin-bottom: 20px;
        color: #00ffff;
        text-shadow: 0 0 20px #00ffff;
        animation: glow 2s ease-in-out infinite alternate;
    }

    @keyframes glow {
        from {
            text-shadow: 0 0 20px #00ffff;
        }

        to {
            text-shadow: 0 0 30px #00ffff, 0 0 40px #00ffff;
        }
    }

    .final-score {
        font-size: clamp(18px, 5vw, 24px);
        margin-bottom: 30px;
        color: white;
    }

    .restart-btn {
        background: linear-gradient(145deg, #00ffff, #0099cc);
        border: none;
        padding: 15px 30px;
        border-radius: 25px;
        color: black;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 255, 255, 0.4);
    }

    .restart-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 255, 255, 0.6);
    }

    .instructions {
        position: absolute;
        bottom: 160px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 12px;
        color: rgba(255, 255, 255, 0.6);
        text-align: center;
    }

    /* Efectos de partÃ­culas para la pelota */
    .ball-trail {
        position: absolute;
        width: 4px;
        height: 4px;
        background: #00ffff;
        border-radius: 50%;
        pointer-events: none;
        animation: fadeOut 0.5s ease-out forwards;
    }

    @keyframes fadeOut {
        0% {
            opacity: 1;
            transform: scale(1);
        }

        100% {
            opacity: 0;
            transform: scale(0);
        }
    }

    /* Responsive design */
    @media (max-width: 480px) {
        .control-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }

        #controls {
            height: 120px;
            padding: 15px;
        }
    }

    @media (orientation: landscape) and (max-height: 600px) {
        #controls {
            height: 100px;
            padding: 10px;
        }

        .control-btn {
            width: 45px;
            height: 45px;
            font-size: 18px;
        }
    }
</style>
