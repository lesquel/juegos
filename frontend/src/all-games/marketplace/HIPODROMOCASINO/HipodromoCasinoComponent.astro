    padding: 2rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .section-title {
    color: var(--primary-gold);
    font-size: 1.5rem;
    font-weight: 900;
    margin-bottom: 1.5rem;
    text-align: center;
    text-shadow: 0 0 15px var(--primary-gold);
  }

  .horse-grid {
    display: grid;
    gap: 1rem;
  }

  .horse-card {
