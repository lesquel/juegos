      const overlay = document.getElementById("celebrationOverlay");
      if (!overlay) return;

      overlay.innerHTML = "";

      for (let i = 0; i < 100; i++) {
        const confetti = document.createElement("div");
        confetti.className = "confetti";
        confetti.style.left = Math.random() * 100 + "%";
