---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="lost-on-stranger-terra-root"></div>
</LayoutForGames>

<script>
  import LostOnStrangerTerraGame from '@all-games/marketplace/lost-on-stranger-terra/components/LostOnStrangerTerraGame.tsx';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('lost-on-stranger-terra-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(LostOnStrangerTerraGame));
    }
  });
</script>
