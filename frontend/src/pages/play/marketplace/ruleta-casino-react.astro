---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="ruleta-casino-root"></div>
</LayoutForGames>

<script>
  import RouletteGame from '@all-games/marketplace/RuletaCasino';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('ruleta-casino-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(RouletteGame));
    }
  });
</script>
