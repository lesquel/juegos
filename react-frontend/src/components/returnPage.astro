<button
  id="returnBtn"
  class="fixed top-5 left-5 z-50 max-w-24 max-h-8
    bg-gradient-to-br from-blue-500 to-blue-700
    text-white border border-white/20 rounded-lg
    px-4 py-3
    text-base font-bold
    shadow-md
    flex items-center gap-2
    backdrop-blur-md
    transition-transform duration-300 ease-in-out
    hover:-translate-y-0.5 hover:shadow-lg hover:bg-gradient-to-br hover:from-blue-700 hover:to-blue-500
    active:translate-y-0 active:shadow
    font-sans"
>
  <span class="text-lg font-bold flex items-center">‚Üê</span> Volver
</button>

<script is:inline>
  const returnBtn = document.getElementById("returnBtn");
  if (returnBtn) {
    returnBtn.addEventListener("click", () => {
      if (window.history.length > 1) {
        window.history.back();
      } else {
        window.location.href = "/";
      }
    });
  }
</script>
