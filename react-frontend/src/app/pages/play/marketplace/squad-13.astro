---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="squad-13-root"></div>
</LayoutForGames>

<script>
  import Squad13Game from '@all-games/marketplace/squad-13';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('squad-13-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(Squad13Game));
    }
  });
</script>
