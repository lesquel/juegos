---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="dados-react-root"></div>
</LayoutForGames>

<script>
  import DadosGame from '@all-games/marketplace/dados-react';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('dados-react-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(DadosGame));
    }
  });
</script>
