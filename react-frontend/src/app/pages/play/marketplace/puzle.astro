---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="puzle-root"></div>
</LayoutForGames>

<script>
  import PuzleGame from '@all-games/marketplace/puzle';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('puzle-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(PuzleGame));
    }
  });
</script>
