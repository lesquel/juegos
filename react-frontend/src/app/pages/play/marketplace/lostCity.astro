---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="lost-city-root"></div>
</LayoutForGames>

<script>
  import LostCityGame from '@all-games/marketplace/lost-city';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('lost-city-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(LostCityGame));
    }
  });
</script>