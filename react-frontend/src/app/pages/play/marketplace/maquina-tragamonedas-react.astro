---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="maquina-tragamonedas-react-root"></div>
</LayoutForGames>

<script>
  import SlotGame from '@all-games/marketplace/maquina-tragamonedas-react';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('maquina-tragamonedas-react-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(SlotGame));
    }
  });
</script>
