---
import LayoutForGames from "@layouts/LayoutForGames.astro";
---

<LayoutForGames>
  <div id="golfrog-root"></div>
</LayoutForGames>

<script>
  import GolfrogGame from '@all-games/marketplace/golfrog';
  import React from 'react';
  import { createRoot } from 'react-dom/client';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('golfrog-root');
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(GolfrogGame));
    }
  });
</script>
